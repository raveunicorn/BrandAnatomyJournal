---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  date?: string;
  brand?: string;
  description?: string;
}

const { title, date, brand, description } = Astro.props;

const formattedDate = date ? new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}) : null;
---

<BaseLayout title={title} description={description}>
  <Header />
  
  <main class="flex-1">
    <article class="article-container">
      <header class="article-header">
        {brand && (
          <span class="brand-tag">{brand}</span>
        )}
        <h1 class="article-title">{title}</h1>
        {formattedDate && (
          <time class="article-date" datetime={date}>{formattedDate}</time>
        )}
      </header>
      
      <div class="article-body">
        <div class="article-content prose-article">
          <slot />
        </div>
        
        <aside class="article-sidebar">
          <slot name="margin-notes" />
        </aside>
      </div>
    </article>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .article-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }
  
  .article-header {
    max-width: 65ch;
    margin: 0 auto 3rem;
    text-align: center;
  }
  
  .brand-tag {
    display: inline-block;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-ink-blue);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }
  
  .article-title {
    font-family: var(--font-sans);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
    text-wrap: balance;
  }
  
  .article-date {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--color-ink-gray);
  }
  
  .article-body {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 65ch;
    margin: 0 auto;
  }
  
  @media (min-width: 1280px) {
    .article-body {
      grid-template-columns: 65ch 240px;
      max-width: none;
      justify-content: center;
    }
  }
  
  .article-content {
    min-width: 0;
  }
  
  .article-sidebar {
    position: relative;
  }
  
  @media (min-width: 1280px) {
    .article-sidebar {
      padding-top: 2rem;
    }
  }
</style>
