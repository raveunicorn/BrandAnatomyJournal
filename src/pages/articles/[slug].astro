---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const articles = await getCollection('articles');
  return articles.map((article) => ({
    params: { slug: article.id },
    props: { article },
  }));
}

const { article } = Astro.props;
const { Content } = await render(article);

const formattedDate = article.data.date 
  ? article.data.date.toLocaleDateString('en-US', { 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric' 
    })
  : null;
---

<BaseLayout title={article.data.title} description={article.data.excerpt}>
  <Header />
  
  <main class="main">
    <article class="article">
      <header class="article-header">
        {formattedDate && <p class="date">{formattedDate}</p>}
        <h1 class="title">{article.data.title}</h1>
        {article.data.excerpt && <p class="excerpt">{article.data.excerpt}</p>}
        <hr class="rule" />
      </header>
      
      <div class="content">
        <Content />
      </div>
    </article>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .main {
    position: relative;
    width: 100%;
    max-width: 640px;
    margin: 0 auto;
    padding: 0 1.25rem;
  }
  
  .article {
    padding: 2.5rem 0 3rem;
  }
  
  .article-header {
    margin-bottom: 2rem;
  }
  
  .date {
    font-family: var(--font-sans);
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #666;
    margin-bottom: 0.75rem;
  }
  
  .title {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0.75rem;
  }
  
  .excerpt {
    font-family: var(--font-serif);
    font-size: 1.0625rem;
    line-height: 1.6;
    color: #555;
    margin-bottom: 1.5rem;
  }
  
  .rule {
    border: none;
    border-top: 1px solid #000;
    margin: 0;
  }
  
  .content {
    font-family: var(--font-serif);
    font-size: 1.0625rem;
    line-height: 1.75;
    color: #222;
    overflow: visible;
  }
  
  .content :global(p) {
    margin-bottom: 1.25rem;
  }
  
  .content :global(h2) {
    font-family: var(--font-sans);
    font-size: 0.8125rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    margin: 2.5rem 0 1rem;
  }
  
  .content :global(h3) {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 700;
    margin: 2rem 0 0.75rem;
  }
  
  .content :global(a) {
    color: var(--color-ink-blue);
    text-decoration: underline;
  }
  
  .content :global(blockquote) {
    border-left: 2px solid #000;
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #444;
  }
  
  /* Evidence-style images with tape */
  .content :global(p:has(img)) {
    position: relative;
    display: block;
    margin: 2.5rem 0;
  }
  
  .content :global(p:has(img))::before {
    content: '';
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%) rotate(-3deg);
    width: 500px;
    height: 180px;
    background: url('/tape.png') center/contain no-repeat;
    z-index: 10;
    pointer-events: none;
  }
  
  .content :global(img) {
    display: block;
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0.75rem;
    background: #fff;
    border: 1px solid #e5e5e5;
    box-shadow: 
      0 2px 8px rgba(0, 0, 0, 0.08),
      0 4px 20px rgba(0, 0, 0, 0.04);
    transform: rotate(-0.5deg);
  }
  
  .content :global(p:nth-child(even):has(img))::before {
    transform: translateX(-50%) rotate(5deg);
  }
  
  .content :global(p:nth-child(even) img) {
    transform: rotate(0.7deg);
  }
  
  .content :global(p:nth-child(3n):has(img))::before {
    transform: translateX(-50%) rotate(-1deg);
    left: 45%;
  }
  
  .content :global(p:nth-child(3n) img) {
    transform: rotate(-0.3deg);
  }
  
  /* Lists */
  .content :global(ul),
  .content :global(ol) {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
  }
  
  .content :global(li) {
    margin-bottom: 0.5rem;
  }
  
  @media (min-width: 768px) {
    .main {
      padding: 0 2rem;
    }
    
    .article {
      padding: 3.5rem 0 4rem;
    }
    
    .title {
      font-size: 2.25rem;
    }
  }
</style>
